@model PeopleModel
@{
    ViewData["Title"] = "People";
}

<div class="text-center">
    <h1 class="display-4">People</h1>

    @if(Model.People.Any())
    {
        <table class="table">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
            @foreach(var person in Model.People)
            {
                <tr class="clickable" onclick="location.href='@Url.Action("Person", "People", new { id = person.Id })'">
                    <td>@person.Id</td>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                </tr>
            }
        </table>
    }
</div>
