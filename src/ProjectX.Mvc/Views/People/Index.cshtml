@model PeopleModel
@{
    ViewData["Title"] = "People";
}

<h1>People</h1>

@if(Model.People.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model.People)
            {
                <tr>
                    <td><a asp-controller="People" asp-action="Person" asp-route-id="@person.Id">@person.Id</a></td>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}