@page "/people"

@using ProjectX.Api.Abstractions

@inject Services.IPeopleService PeopleService

<h1>People</h1>

@if (people == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in people)
            {
                <tr>
                    <td><a href="/people/@person.Id">@person.Id</a></td>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    public IEnumerable<ApiPerson> people;

    protected override async Task OnInitializedAsync()
    {
        people = await PeopleService.GetAllAsync();
    }
}