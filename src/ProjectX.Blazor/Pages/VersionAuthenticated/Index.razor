@page "/versionauthenticated"
@using ProjectX.Api
@using ProjectX.Blazor.Services
@attribute [Authorize]

@inject IBlazorVersionService BlazorVersionService

<h1>Version Authenticated</h1>

@if (version == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>@version</div>
}

@code
{
    public ApiVersion version;

    protected override async Task OnInitializedAsync()
    {
       version = await BlazorVersionService.GetAuthenticatedAsync();
    }
}